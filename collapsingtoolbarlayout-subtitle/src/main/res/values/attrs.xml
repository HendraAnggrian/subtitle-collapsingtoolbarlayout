<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style to use for SubtitleCollapsingToolbarLayouts in this theme. -->
    <attr name="subtitleCollapsingToolbarLayoutStyle" format="reference" />

    <!-- Style to use for Medium SubtitleCollapsingToolbarLayouts in this theme. -->
    <attr name="subtitleCollapsingToolbarLayoutMediumStyle" format="reference" />

    <!-- Style to use for Large SubtitleCollapsingToolbarLayouts in this theme. -->
    <attr name="subtitleCollapsingToolbarLayoutLargeStyle" format="reference" />

    <!-- Size to use for Medium SubtitleCollapsingToolbarLayouts in this theme. -->
    <attr name="subtitleCollapsingToolbarLayoutMediumSize" format="reference" />

    <!-- Size to use for Large SubtitleCollapsingToolbarLayouts in this theme. -->
    <attr name="subtitleCollapsingToolbarLayoutLargeSize" format="reference" />

    <declare-styleable name="SubtitleCollapsingToolbarLayout">
        <!-- Inherited from 'material-components' -->
        <attr name="expandedTitleMargin" />
        <attr name="expandedTitleMarginStart" />
        <attr name="expandedTitleMarginTop" />
        <attr name="expandedTitleMarginEnd" />
        <attr name="expandedTitleMarginBottom" />
        <attr name="expandedTitleTextAppearance" />
        <attr name="collapsedTitleTextAppearance" />
        <attr name="expandedTitleTextColor" />
        <attr name="collapsedTitleTextColor" />
        <attr name="contentScrim" />
        <attr name="statusBarScrim" />
        <attr name="toolbarId" />
        <attr name="scrimVisibleHeightTrigger" />
        <attr name="scrimAnimationDuration" />
        <attr name="collapsedTitleGravity" />
        <attr name="expandedTitleGravity" />
        <attr name="titleEnabled" />
        <attr name="titleCollapseMode" />
        <attr name="forceApplySystemWindowInsetTop" />
        <attr name="titlePositionInterpolator" />

        <!-- Inherited from 'androidx.appcompat' -->
        <attr name="title" />
        <attr name="subtitle" />

        <!-- The text appearance of the CollapsingToolbarLayout's subtitle when it is fully
             'expanded' -->
        <attr name="expandedSubtitleTextAppearance" format="reference" />
        <!-- The text appearance of the CollapsingToolbarLayouts subtitle when it is fully
             'collapsed' -->
        <attr name="collapsedSubtitleTextAppearance" format="reference" />
        <!-- The text color of the CollapsingToolbarLayout's subtitle when it is fully
             'expanded' -->
        <attr name="expandedSubtitleTextColor" format="color|reference" />
        <!-- The text color of the CollapsingToolbarLayouts subtitle when it is fully
             'collapsed' -->
        <attr name="collapsedSubtitleTextColor" format="color|reference" />
        <!-- The maximum number of title lines to display in the expanded state.
             Experimental Feature. -->
        <attr name="titleMaxLines" format="integer" />
        <!-- The maximum number of subtitle lines to display in the expanded state.
             Experimental Feature. -->
        <attr name="subtitleMaxLines" format="integer" />
        <!-- Whether extra height should be added when the title text spans across
             multiple lines. Experimental Feature. -->
        <attr name="titleExtraMultilineHeightEnabled" format="boolean" />
        <!-- Whether extra height should be added when the subtitle text spans across
             multiple lines. Experimental Feature. -->
        <attr name="subtitleExtraMultilineHeightEnabled" format="boolean" />
    </declare-styleable>
</resources>
