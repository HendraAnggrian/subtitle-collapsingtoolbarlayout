<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="General">
        <androidx.preference.SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_text"
            android:key="showSubtitle"
            android:title="Show subtitle" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:icon="@drawable/ic_color"
            android:key="statusBarScrim"
            android:title="Status bar scrim" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:key="contentScrim"
            android:title="Content scrim" />

        <androidx.preference.MultiSelectListPreference
            android:entries="@array/gravities"
            android:entryValues="@array/gravity_values"
            android:key="collapsedGravity"
            android:title="Collapsed gravity" />

        <androidx.preference.MultiSelectListPreference
            android:entries="@array/gravities"
            android:entryValues="@array/gravity_values"
            android:key="expandedGravity"
            android:title="Expanded gravity" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="Expanded title margin">
        <androidx.preference.SeekBarPreference
            android:defaultValue="0"
            android:icon="@drawable/ic_arrow_left"
            android:key="marginLeft"
            android:max="10"
            android:title="Left margin" />

        <androidx.preference.SeekBarPreference
            android:defaultValue="0"
            android:icon="@drawable/ic_arrow_top"
            android:key="marginTop"
            android:max="10"
            android:title="Top margin" />

        <androidx.preference.SeekBarPreference
            android:defaultValue="0"
            android:icon="@drawable/ic_arrow_right"
            android:key="marginRight"
            android:max="10"
            android:title="Right margin" />

        <androidx.preference.SeekBarPreference
            android:defaultValue="0"
            android:icon="@drawable/ic_arrow_bottom"
            android:key="marginBottom"
            android:max="10"
            android:title="Bottom margin" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="Text styling">
        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:key="collapsedTitleColor"
            android:title="Collapsed title text color" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:key="collapsedSubtitleColor"
            android:title="Collapsed subtitle text color" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:key="expandedTitleColor"
            android:title="Expanded title text color" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@android:color/transparent"
            android:key="expandedSubtitleColor"
            android:title="Expanded subtitle text color" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>